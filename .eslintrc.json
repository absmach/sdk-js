{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/no-unsafe-argument": "off",
    "@typescript-eslint/no-throw-literal": "off",
    "no-useless-catch": "off",
    "no-unused-vars": "off"
  }
}
